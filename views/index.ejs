<%- include('partials/header', {
  title: name,
  description: description
}) %>

<!-- HERO -->
<section class="text-left mb-8">
  <p class="text-slate-800 text-xs mb-3">Hi Visitor! Welcome To</p>

  <h1 class="flex flex-wrap items-center gap-2 text-3xl md:text-4xl font-extrabold">
    <span class="flex-grow tracking-tight"><%= name %></span>
    <span class="badge"><%= version %></span>
  </h1>

  <p class="text-slate-600 text-sm mt-3 max-w-2xl"><%= description %></p>

  <% if (links && links.length > 0) { %>
    <div class="mt-5 grid sm:grid-cols-2 lg:grid-cols-3 gap-3">
      <% links.forEach(function(link){ %>
        <a href="<%= link.url %>" target="_blank" class="card group">
          <div class="flex items-center gap-3">
            <div class="h-9 w-9 rounded-xl glass grid place-items-center group-hover:animate-float">
              <span class="material-icons text-brand-700">link</span>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold group-hover:text-brand-700 transition"><%= link.title %></h3>
              <p class="text-xs text-slate-500 mt-1"><%= link.subtitle || 'external link' %></p>
            </div>
            <span class="material-icons opacity-40 group-hover:opacity-80 transition">north_east</span>
          </div>
        </a>
      <% }) %>
    </div>
  <% } %>

  <div class="mt-5 flex gap-3">
    <a href="#categories" class="btn-gradient">
      <span class="material-icons text-[14px]">explore</span> Explore Categories
    </a>
  </div>
</section>

<!-- STATUS BANNER -->
<% if (current_status === 'maintenance') { %>
  <div class="card border-yellow-200 bg-yellow-50/80">
    <div class="flex items-start">
      <span class="material-icons text-yellow-600 text-lg mr-3 flex-shrink-0">warning</span>
      <div class="flex-1">
        <div class="font-bold text-sm text-yellow-800 mb-1">System Maintenance</div>
        <div class="text-xs text-yellow-700">
          The API is currently under maintenance. Some endpoints may not work properly or may experience delays.
        </div>
      </div>
    </div>
  </div>
<% } else if (current_status === 'error') { %>
  <div class="card border-red-200 bg-red-50/80">
    <div class="flex items-start">
      <span class="material-icons text-red-600 text-lg mr-3 flex-shrink-0">error</span>
      <div class="flex-1">
        <div class="font-bold text-sm text-red-800 mb-1">Service Error</div>
        <div class="text-xs text-red-700">
          The API is experiencing technical difficulties. Most endpoints are unavailable at this time.
        </div>
      </div>
    </div>
  </div>
<% } %>

<!-- STATS -->
<section class="grid grid-cols-2 gap-4 my-5">
  <div class="card text-center animate-float">
    <div class="text-lg font-bold text-slate-900">
      <% if (endpoints && endpoints.length > 0) { %>
        <%= endpoints.reduce((total, category) => total + category.items.length, 0) %>
      <% } else { %>0<% } %>
    </div>
    <div class="text-xs text-slate-600">Total Endpoints</div>
  </div>

  <div class="card text-center animate-float" style="animation-delay:.15s">
    <div class="text-lg font-bold text-slate-900">
      <% if (endpoints && endpoints.length > 0) { %>
        <%= endpoints.length %>
      <% } else { %>0<% } %>
    </div>
    <div class="text-xs text-slate-600">Categories</div>
  </div>
</section>

<!-- CATEGORIES -->
<section id="categories" class="space-y-3">
  <% if (endpoints && endpoints.length > 0) { %>
    <% endpoints.forEach((category) => { %>
      <%
        const categorySlug = category.name.toLowerCase()
          .replace(/[^a-z0-9\s-]/g, '')
          .replace(/\s+/g, '-')
          .trim();
        const categoryConfig = categories[categorySlug] || {};
        const categoryType = categoryConfig.type || 'application/json';
        const categoryDesc = categoryConfig.description || '-';
      %>

      <a href="/category/<%= categorySlug %>" class="block">
        <div class="card group hover:border-slate-300">
          <div class="px-1 py-1.5 md:px-1 md:py-2 flex items-center justify-between">
            <div class="flex items-center min-w-0 flex-1">
              <span class="material-icons text-white bg-slate-900 py-1 px-2 rounded-lg mr-4">folder</span>
              <div class="flex flex-col min-w-0 flex-1">
                <div class="flex items-center gap-2 mb-1">
                  <h3 class="font-semibold text-sm text-slate-900 truncate group-hover:text-brand-700 transition">
                    <%= category.name %>
                  </h3>
                  <span class="text-[10px] font-bold text-slate-400">( <%= category.items.length %> )</span>
                </div>
                <p class="text-xs text-slate-500"><%= categoryType %></p>
                <% if (categoryDesc && categoryDesc !== '-') { %>
                  <p class="text-[11px] text-slate-500 mt-1 line-clamp-1"><%= categoryDesc %></p>
                <% } %>
              </div>
            </div>
            <span class="material-icons text-slate-400 group-hover:text-slate-700 transition">chevron_right</span>
          </div>
        </div>
      </a>
    <% }) %>
  <% } else { %>
    <div class="card text-center py-14">
      <div class="max-w-md mx-auto">
        <span class="material-icons text-slate-400 text-5xl mb-3">api</span>
        <h3 class="text-sm text-slate-700 mb-2">No API categories available yet.</h3>
      </div>
    </div>
  <% } %>
</section>

<%- include('partials/footer', { name }) %>